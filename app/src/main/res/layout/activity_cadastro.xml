<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.CadastroActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/cinzaclaro"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar Conta"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etRegNome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:hint="Nome"
        android:textColor="@color/darkGrey"
        android:paddingLeft="20dp"
        android:background="@drawable/backgraundinputs"
        android:inputType="text"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etRegSobrenome"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:hint="Sobrenome"
        android:background="@drawable/backgraundinputs"
        android:inputType="text"/>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="20dp"
        android:id="@+id/etRegEmail"
        android:background="@drawable/backgraundinputs"
        android:layout_marginTop="20dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etRegPassword"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:layout_height="48dp"
        android:hint="Password"
        android:background="@drawable/backgraundinputs"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Cadastrar"
        android:background="@drawable/backgraundbuttonlogincadastro"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paginaLogin"
        android:layout_marginTop="24dp"
        android:textColor="@color/darkGrey"
        android:text="Ja possui conta! Clique aqui"
        android:textStyle="bold"/>


</LinearLayout>